{
	"compilerOptions": {
		"strict": true,
		"module": "ES6",
		"target": "ES6",
		"declaration": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"outDir": "dist",
	},
	"include": [
		"index.ts",
		"test",
	],
	"exclude": [
		"node_modules",
		"dist",
	]
}