{
	"compilerOptions": {
		"allowJs": true,
		"declaration": true,
		"module": "commonjs",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"outDir": "dist",
		"strict": true,
		"target": "es6",
	},
	"include": [
		"src",
	],
	"exclude": [
		"node_modules",
		"dist",
	]
}